<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/nomNotaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/borrarNotaBttn"
            android:padding="4dp"
            android:text="@string/nota"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_toStartOf="@id/borrarNotaBttn" />

        <TextView
            android:id="@+id/dataNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomNotaTV"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/borrarNotaBttn"
            android:padding="4dp"
            android:text="@string/ultima_actualitazci"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_toStartOf="@id/borrarNotaBttn" />

        <ImageView
            android:id="@+id/borrarNotaBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/white"
            android:contentDescription="BotÃ³BorrarNota" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>